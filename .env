# .env.development
# Configuration pour l'environnement de développement

# URL de l'API backend Spring Boot
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Timeout des requêtes HTTP (en millisecondes)
VITE_API_TIMEOUT=10000

# Configuration de l'authentification
VITE_JWT_SECRET_KEY=your-development-secret-key
VITE_JWT_EXPIRES_IN=3600
VITE_REFRESH_TOKEN_EXPIRES_IN=86400

# Configuration de l'application
VITE_APP_NAME="Dashboard RH - Dev"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT=development

# Configuration des logs
VITE_LOG_LEVEL=debug
VITE_ENABLE_REDUX_DEVTOOLS=true

# Configuration des fonctionnalités
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_SERVICE_WORKER=false

# Configuration de sécurité (développement)
VITE_ENABLE_HTTPS=false
VITE_CORS_ORIGIN=http://localhost:3000

---

# .env.production
# Configuration pour l'environnement de production

# URL de l'API backend (à adapter selon votre déploiement)
VITE_API_BASE_URL=https://api.dashboard-rh.com/api/v1

# Timeout des requêtes HTTP
VITE_API_TIMEOUT=15000

# Configuration de l'application
VITE_APP_NAME="Dashboard RH"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT=production

# Configuration des logs (production)
VITE_LOG_LEVEL=error
VITE_ENABLE_REDUX_DEVTOOLS=false

# Configuration des fonctionnalités (production)
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_SERVICE_WORKER=true

# Configuration de sécurité (production)
VITE_ENABLE_HTTPS=true

---

# .env.local.example
# Exemple de configuration locale
# Copiez ce fichier vers .env.local et adaptez les valeurs

# URL de l'API (développement local)
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Configuration personnalisée
VITE_APP_NAME="Mon Dashboard RH Local"

# Clés d'API (ne jamais committer les vraies valeurs)
VITE_EXAMPLE_API_KEY=your-api-key-here

# Configuration de debug
VITE_DEBUG_MODE=true